<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@+id/cityFragment">

    <fragment
        android:id="@+id/cityFragment"
        android:name="com.addeso.simpleweather.CityFragment"
        tools:layout="@layout/city_page">
        <action
            android:id="@+id/action_cityFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.addeso.simpleweather.WeatherFragment"
        tools:layout="@layout/weather_page">
        <argument
            android:name="cityId"
            app:argType="string" />
    </fragment>

</navigation>

